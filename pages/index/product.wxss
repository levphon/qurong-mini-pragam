.weui-navbar {
    background: #fff;
}

.weui-navbar__title {
    font-size: 16px;
}

.weui-navbar .weui-navbar__slider {
    background: #f08519;
    height: 2px;
}

.weui-navbar .weui-bar__item_on {
    color: #f08519;
}

.wx_fangan {
    display: flex;
    padding: 10px 0;
    background: #fff;
    border: 1rpx solid #ddd;
    position: relative;
}

.wx_fangan text {
    padding: 0 4px;
    color: #c3c3c3;
    font-size: 16px;
}

.l_text, .r_text {
    flex: 1;
}

.l_text {
    text-align: right;
}

.r_text {
    text-align: left;
}

.wx_fangan .active {
    color: #f08519;
}

.wx_switch {
    float: right;
}

.wx_picker_text {
    padding: 0 0 0 6px;
}
