/**area.wxss**/

page {
    background: #efeff4;
}

.weui-input, .picker {
    text-align: right;
}

.picker {
    padding: 10px 0;
    color: #808080;
}

.weui-cell__ft_in-access:after {
    -webkit-transform: rotate(135deg);
    transform: rotate(135deg);
    right: 0px;
    top: -2px;
}

.iptPlaceholder {
    color: #ccc;
}

.wx_title .weui-cell__bd {
    color: #666;
}

.wx_title::before {
    border-top: 0;
}

.wx_tips {
    font-size: 12px;
    color: #808080;
    padding: 10px 0;
}

.weui-cell__ft_in-access:after {
