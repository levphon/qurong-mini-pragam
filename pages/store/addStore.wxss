/**area.wxss**/

page {
    background: #efeff4;
    
}

page, .page, .page__bd {
    height: 100%;
}
.page{
    padding-bottom:100px;
}

.weui-cell__ft .yzm_button {
    background: #10aeff;
    color: #fff;
    margin: 0px 4px;
    top: 3px;
    padding: 1px 6px;
}

.userImg {
    margin: 30px 0;
}

.img_upload_box {
    position: relative;
}

.img_bg {
    width: 138px;
    border: 1px dashed #ddd;
    border-radius: 2px;
    margin: 10px 0;
}

.weui-input, .picker {
    text-align: right;
}

.picker {
    padding: 10px 0;
    color: #808080;
}

.weui-cell__ft_in-access:after {
    -webkit-transform: rotate(135deg);
    transform: rotate(135deg);
    right: 0px;
    top: -2px;
}

.weui-cell {
    padding: 5px 15px;
}

.iptPlaceholder {
    font-size: 14px;
    color: #ccc;
}

.img_show {
    border-top: 1rpx solid #ddd;
    text-align: center;
    padding: 20px 0;
}

.img_inner {
    position: relative;
    width: 16em;
    margin: 0 auto;
}

.img_show .img {
    border: 1px dashed #ddd;
    border-radius: 2px;
    width: 16em;
}

.img_title {
    background: #efeff4;
}

.img_close {
    position: absolute;
    width: 20px;
    top: -9px;
    right: -10px;
}

.btn-area {
    position: fixed;
    bottom: 10px;
    left: 0px;
    right: 0px;
    z-index:999;
}
